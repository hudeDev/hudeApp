    <gap:splash src="images/system/splash/splash_android_480x320px_landscape_mdpi.png"  gap:platform="android" gap:density="mdpi" width="480" height="320" />
    <gap:splash src="images/system/splash/splash_android_320x200px_landscape_ldpi.png"  gap:platform="android" gap:density="ldpi" width="320" height="200" />


    <preference name="android-minSdkVersion" value="11" />
    <preference name="android-maxSdkVersion" value="17" />         
   
    <!-- iOS  -->
    <icon src="images/system/icon/icon_ios_57px_iphone.png" gap:platform="ios" width="57" height="57" /> -->
    <icon src="images/system/icon/icon_ios_72px_ipad.png" gap:platform="ios" width="72" height="72" />
    <icon src="images/system/icon/icon_ios_114px_iphone4_retina.png" gap:platform="ios" width="114" height="114" />
    <icon src="images/system/icon/icon_ios_144px_ipad3_retina.png" gap:platform="ios" width="144" height="144" />
    
    <gap:splash src="images/system/splash/splash_ios_320x480px_iphone_portrait.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="images/system/splash/splash_ios_640x960px_iphone_retina_portrait.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="images/system/splash/splash_ios_640x1136px_iphone_2x_retina_portrait.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="images/system/splash/splash_ios_1024x748px_ipad_landscape.png" gap:platform="ios" width="1024" height="768" />
    <gap:splash src="images/system/splash/splash_ios_768x1004px_ipad_portrait.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="images/system/splash/splash_ios_2048x1496px_ipad_2x_retina_landscape.png" gap:platform="ios" width="2048" height="1496" />
    <gap:splash src="images/system/splash/splash_ios_1536x2048px_ipad_2x_retina_portrait.png" gap:platform="ios" width="1536" height="2008" />
    
    <preference name="webviewbounce" value="true" />        
    <preference name="stay-in-webview" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />   
     
    <!-- Windows Phone 
    <icon src="icons/winphone/icon.png" gap:platform="winphone" />
    <icon src="icons/winphone/tileicon.png" gap:platform="winphone" gap:role="background" />
    <gap:splash src="winphoneSplash.jpg" gap:platform="winphone" />   
    -->     
    <!-- Features -->
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network" />
    <!-- Plugins -->
    <gap:plugin name="com.phonegap.plugins.barcodescanner" />
