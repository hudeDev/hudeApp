<?xml version="1.0" encoding="UTF-8" ?>
<widget 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:gap="http://phonegap.com/ns/1.0" 
    id="de.unioldenburg.svshude" 
    version="1.0.0">
    <name>Hude</name>
    <description>
        Informationen immer dabei - f√ºr Ihren Besuch in Hude und Umgebung!
    </description>
    <author href="http://touristik-palette-hude.de" email="info@touristik-palette-hude.de">
        Touristik-Palette Hude e.V.
    </author> 
    <!-- Allgemein -->
    <preference name="phonegap-version" value="2.9.0" />
    <preference name="orientation" value="default" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="load-url-timeout" value="30000" />
    <preference name="splash-screen-duration" value="5000" />
    <!--
    <icon src="icon.png" />
    <gap:splash src="splash.png" />        
    -->
    <icon src="images/system/icon/icon_android_36px_ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="images/system/icon/icon_android_48px_mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="images/system/icon/icon_android_72px_hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="images/system/icon/icon_android_96px_xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    
    <gap:splash src="images/system/splash/splash_android_720x1280px_portrait_xhdpi.png" gap:platform="android" gap:density="xhdpi"/>
    <gap:splash src="images/system/splash/splash_android_480x800px_portrait_hdpi.png"  gap:platform="android" gap:density="hdpi"/>
    <gap:splash src="images/system/splash/splash_android_320x480px_portrait_mdpi.png"  gap:platform="android" gap:density="mdpi"/>
    <gap:splash src="images/system/splash/splash_android_200x320px_portrait_ldpi.png"  gap:platform="android" gap:density="ldpi"/>
    <gap:splash src="images/system/splash/splash_android_1280x720px_landscape_xhdpi.png" gap:platform="android" gap:density="xhdpi" width="1280" height="720" />
